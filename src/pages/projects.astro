---
import BaseLayout from '@/layouts/BaseLayout'
import TitlePage from '@/components/TitlePage'
import ProjectCard from '@/components/ProjectCard'

// Import placeholder images - replace these with your actual project images
import placeholderImage from '../assets/images/placeholder-hero.jpg'

const meta = {
	title: 'Projects',
	description: 'A showcase of applications and projects I have built.'
}

// Sample projects data - replace with your actual projects
const projects = [
	{
		title: 'Project One',
		description:
			'A full-stack web application that helps users manage their tasks and collaborate with teams. Features real-time updates and a clean, intuitive interface.',
		heroImage: placeholderImage,
		tags: ['React', 'Node.js', 'PostgreSQL', 'WebSockets'],
		demoUrl: 'https://example.com',
		githubUrl: 'https://github.com/yourusername/project-one'
	},
	{
		title: 'Project Two',
		description:
			'A mobile-first progressive web app for tracking fitness goals and workout routines. Built with performance and offline-first functionality in mind.',
		heroImage: placeholderImage,
		tags: ['Vue.js', 'Firebase', 'PWA', 'Tailwind CSS'],
		demoUrl: 'https://example.com',
		githubUrl: 'https://github.com/yourusername/project-two'
	},
	{
		title: 'Project Three',
		description:
			'An open-source CLI tool that automates common development workflows and improves developer productivity through smart defaults and configuration.',
		heroImage: placeholderImage,
		tags: ['TypeScript', 'Node.js', 'CLI'],
		githubUrl: 'https://github.com/yourusername/project-three'
	},
	{
		title: 'Project Four',
		description:
			'A data visualization dashboard for analyzing business metrics. Features interactive charts, custom date ranges, and export functionality.',
		heroImage: placeholderImage,
		tags: ['React', 'D3.js', 'Express', 'MongoDB'],
		demoUrl: 'https://example.com'
	},
	{
		title: 'Project Five',
		description:
			'A real-time chat application with support for private messages, group channels, and file sharing. Built with scalability in mind.',
		heroImage: placeholderImage,
		tags: ['Next.js', 'Socket.io', 'Redis', 'PostgreSQL'],
		demoUrl: 'https://example.com',
		githubUrl: 'https://github.com/yourusername/project-five'
	},
	{
		title: 'Project Six',
		description:
			'An e-commerce platform with payment processing, inventory management, and order tracking. Fully responsive and accessible.',
		heroImage: placeholderImage,
		tags: ['React', 'Stripe', 'Node.js', 'MySQL'],
		demoUrl: 'https://example.com'
	}
]
---

<BaseLayout title={meta.title} description={meta.description}>
	<TitlePage title='Projects' />

	<!-- Intro Section -->
	<section class='prose dark:prose-invert max-w-none mt-8'>
		<p class='text-lg'>
			Here's a collection of applications and projects I've built over the years. Each project
			represents a unique challenge and learning opportunity.
		</p>
	</section>

	<!-- Projects Grid -->
	<section class='grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 mt-8'>
		{
			projects.map((project) => (
				<ProjectCard
					title={project.title}
					description={project.description}
					heroImage={project.heroImage}
					tags={project.tags}
					demoUrl={project.demoUrl}
					githubUrl={project.githubUrl}
				/>
			))
		}
	</section>
</BaseLayout>
