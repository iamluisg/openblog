---
import BaseLayout from '@/layouts/BaseLayout'
import TitlePage from '@/components/TitlePage'
import ProjectCard from '@/components/ProjectCard'

// Import placeholder images - replace these with your actual project images
import placeholderImage from '../assets/images/placeholder-hero.jpg'
import inflectImage from '../assets/images/inflectIcon.png'
import officeIdiomsImage from '../assets/images/officeIdiomsIcon.png'
import everydayEnglishImage from '../assets/images/everydayEnglishIcon.png'

const meta = {
	title: 'Projects',
	description: 'A showcase of applications and projects I have built.'
}

// Sample projects data - replace with your actual projects
const projects = [
	{
		title: 'Inflect',
		description:
			'iOS app that helps users with English pronunciation through interactive exercises using the front-facing camera.',
		heroImage: inflectImage,
		tags: [],
		liveUrl:
			'https://geo.itunes.apple.com/us/app/inflect-english-language-pronunciation/id1065293819?mt=8'
	},
	{
		title: 'Office Idioms',
		description:
			'An iOS app designed to help Korean-speaking professionals with English idioms used in workplace settings.',
		heroImage: officeIdiomsImage,
		tags: [],
		liveUrl: 'https://itunes.apple.com/us/app/office-idioms-sug-eo/id397746999?mt=8'
	},
	{
		title: 'Everyday English',
		description:
			'Everyday English is a reference app designed to help Korean speakers navigate real-world English with ease.',
		heroImage: everydayEnglishImage,
		tags: [],
		liveUrl: 'https://itunes.apple.com/us/app/oi-everyday-english/id510558562?mt=8'
	}
]
---

<BaseLayout title={meta.title} description={meta.description}>
	<TitlePage title='Projects' />

	<!-- Intro Section -->
	<section class='prose dark:prose-invert max-w-none mt-1'>
		<p class='text-lg'>
			Here's a collection of personal applications and projects I've built over the years.
		</p>
	</section>

	<!-- Projects Grid -->
	<section class='grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 mt-4'>
		{
			projects.map((project) => (
				<ProjectCard
					title={project.title}
					description={project.description}
					heroImage={project.heroImage}
					tags={project.tags}
					liveUrl={project.liveUrl}
					demoUrl={project.demoUrl}
					githubUrl={project.githubUrl}
				/>
			))
		}
	</section>
</BaseLayout>
