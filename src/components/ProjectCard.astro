---
import { Image } from 'astro:assets'
import ArrowUp from '@/components/icons/ArrowUp'

interface Props {
	title: string
	description: string
	heroImage: ImageMetadata
	tags: string[]
	demoUrl?: string
	githubUrl?: string
}

const { title, description, heroImage, tags, demoUrl, githubUrl } = Astro.props
---

<article class='grid grid-rows-[300px_auto] md:grid-rows-[300px_280px] min-h-full group'>
	<div class='relative overflow-hidden'>
		<Image
			src={heroImage}
			width={600}
			height={300}
			format='webp'
			class='h-full min-w-full object-cover hover:scale-[101%] transition-all duration-200 rounded-[2px]'
			alt={`Screenshot of ${title}`}
		/>

		<!-- Glass overlay with tags -->
		<div class='z-30 absolute bottom-0 w-full'>
			<div class='-z-10 absolute bottom-0 glass w-full min-h-full'></div>
			<div class='flex flex-wrap gap-2 text-white px-4 py-3'>
				{
					tags
						.slice(0, 3)
						.map((tag) => (
							<span class='text-xs bg-indigo-900 dark:bg-indigo-700 rounded-full px-3 py-1'>
								{tag}
							</span>
						))
				}
			</div>
		</div>
	</div>

	<div class='flex justify-between flex-col gap-4 md:gap-0 py-6 pl-1'>
		<div class='flex flex-col gap-3'>
			<div class='flex flex-col gap-2'>
				<h3 class='text-2xl font-semibold -tracking-wider text-stone-950 dark:text-white'>
					{title}
				</h3>
			</div>

			<p
				class='overflow-hidden line-clamp-3 text-gray-700 dark:text-white mb-3 font-[400] md:pr-[15%]'
			>
				{description}
			</p>
		</div>

		<footer class='flex gap-4 items-center'>
			{
				demoUrl && (
					<a
						href={demoUrl}
						target='_blank'
						rel='noopener noreferrer'
						class='flex justify-center items-center dark:text-white rounded-full hover:translate-x-1 transition-transform duration-150 ease-in-out font-semibold gap-1 group'
						aria-label={`View demo of ${title}`}
					>
						View Demo
						<span class='mt-[1px] group-hover:rotate-45 transition-transform duration-250 ease-in-out'>
							<ArrowUp width='18' height='18' />
						</span>
					</a>
				)
			}

			{
				githubUrl && (
					<a
						href={githubUrl}
						target='_blank'
						rel='noopener noreferrer'
						class='text-gray-600 dark:text-gray-300 hover:text-stone-950 dark:hover:text-white transition-colors duration-150 font-medium'
						aria-label={`View ${title} on GitHub`}
					>
						GitHub
					</a>
				)
			}
		</footer>
	</div>
</article>
